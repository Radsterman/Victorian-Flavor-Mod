template main_menu_shimmer
{
	modify_texture = {
		name = "glow"
		texture = "gfx/interface/animation/shimmer.dds"
		blend_mode = colordodge
		translate_uv = { 0 0 }
	}
	state = {
		block "main_menu_shimmer_trigger" {
			name = main_menu_start
		}
		next = shimmer_2
		duration = 0
		
		modify_texture = {
			name = "glow"
			translate_uv = { 1 1 }
		}
	}
	state = {
		name = shimmer_2
		block "main_menu_shimmer_duration" {
			duration = 1.5
		}
		block "main_menu_shimmer_delay" {}
		using = Animation_Curve_Default
		
		modify_texture = {
			name = "glow"
			translate_uv = { -1 -0.5 }
		}
	}
}
template main_menu_logo_shimmer
{
	modify_texture = {
		name = "glow"
		texture = "gfx/interface/animation/shimmer.dds"
		blend_mode = colordodge
		translate_uv = { 1 1 }
	}
	state = {
		block "main_menu_shimmer_trigger" {
			name = main_menu_start
		}
		next = shimmer_2
		duration = 0
		
		modify_texture = {
			name = "glow"
			translate_uv = { 1 1 }
		}
	}
	state = {
		name = shimmer_2
		duration = 1
		delay = 0
		using = Animation_Curve_EaseOut
		
		modify_texture = {
			name = "glow"
			translate_uv = { -1 -0.5 }
		}
	}
}